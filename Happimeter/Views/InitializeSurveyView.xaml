<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Happimeter.Views.InitializeSurveyView"
    Title="Survey">
	<ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="20" Padding="20">
            <Label FontSize="28" >Survey</Label>
            <Image HeightRequest="100" Source="HappimeterLogo"></Image>
            <Label>Please click the button below to start the survey. Once you finished the survey you can keep track of past surveys in the overview tab.</Label>
            <Label> All survey responses will be transferred to our server where they are safely stored.</Label>
            <Label FontAttributes="Bold"> By partaking in this survey, you agree that your survey responses may be used for scientific purposes.</Label>
            <Button Text="Start Survey"></Button>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
